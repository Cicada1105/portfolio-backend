extends ../layout/default.pug

block page-content
	h1.text-center Employment
	table.text-center.m-auto
		thead
			tr
				th Job Title
				th Employer
				th Description
				th Start Month
				th Start Year
				th End Month
				th End Year
				th
		tbody
			each job in employment
				tr
					td= job.title
					td= job.employer
					td= job.description
					td= job.start_month
					td= job.start_year
					td= job.end_month
					td= job.end_year
					td
						a(href=`/cms/employment/edit/${job['_id']}`)
							i.fa-regular.fa-pen-to-square
						form(action=`/cms/employment/delete/${job['_id']}` method="POST")
							button
								i.fa-regular.fa-trash-can